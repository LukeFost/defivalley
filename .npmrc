# DeFi Valley pnpm monorepo configuration

# Force monorepo workspaces
shared-workspace-lockfile=true
auto-install-peers=true

# Enforce engines from package.json
engine-strict=true

# Public registry
registry=https://registry.npmjs.org/

# Don't mutate package.json version ranges
save-exact=true

# pnpm specific
package-import-method=clone
node-linker=hoisted
install-strategy=shamefully-hoist

# Hardhat 3 Alpha compatibility
enable-pre-post-scripts=true

# Performance optimizations
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000